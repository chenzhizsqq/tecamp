<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableLayout
        android:id="@+id/Frag04_TableLayout_All"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TableLayout
                android:id="@+id/Frag04_TableLayout_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/Frag04ButtonPrevWeek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:text="前週"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/Frag04ButtonPrev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:text="前日"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/frag04_current_date"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="選択日"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/pick_date_search_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:onClick="showDatePickerDialog"
                        android:text="@string/pick_date_search_date"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/Frag04ButtonNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:text="翌日"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/Frag04ButtonNextWeek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:text="翌週"
                        android:textSize="20sp" />

                </TableRow>
            </TableLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TableLayout
                android:id="@+id/Frag04_TableLayout_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/purple_200"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="日付："
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/Frag04_textView_date_0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="date_0"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/Frag04_textView_date_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="date_1"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/Frag04_textView_date_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="date_2"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/Frag04_textView_date_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="date_3"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/Frag04_textView_date_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="date_4"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/Frag04_textView_date_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="date_5"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/Frag04_textView_date_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="date_6"
                        android:textSize="20dp" />
                </TableRow>

            </TableLayout>
        </TableRow>
    </TableLayout>


</androidx.core.widget.NestedScrollView>